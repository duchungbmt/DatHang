<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#40BFEF"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main">

        <LinearLayout
            android:layout_marginTop="100px"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_marginBottom="50px"
                android:layout_gravity="center_horizontal"


                />

            <EditText
                android:layout_width="400px"
                android:background="#FFFFFF"
                android:layout_height="50px"
                android:id="@+id/edt_login_username"
                android:layout_gravity="center_horizontal"
                android:hint="Username"/>

            <EditText
                android:layout_marginTop="80px"
                android:background="#FFFFFF"
                android:layout_width="400px"
                android:layout_height="50px"
                android:width="100px"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/edt_login_password"
                android:layout_gravity="center_horizontal"
                android:hint="Password"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80px"
                android:gravity="center">


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ðăng ký"
                    android:layout_marginRight="50px"
                    android:id="@+id/btn_DangNhap_dangky" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ðăng Nhập"
                    android:id="@+id/btn_DangNhap_dangnhap"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:text="Ứng dụng chạy thử nghiệm tại TP-HCM"
                android:layout_marginTop="40px"
                android:textStyle="italic|bold"
                android:textColor="#fff6ff70"
                android:gravity="center"
                android:id="@+id/txtv_DangNhap_notification"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>


</RelativeLayout>
